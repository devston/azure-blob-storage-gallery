@model List<string>
@{
    ViewData["Title"] = "Gallery";
}

<a class="btn btn-primary mb-3" asp-action="UploadFile" asp-controller="Home">Upload</a>

<div class="card card-default">
    <div class="card-body">
        @if (Model != null && Model.Any())
        {
            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                        <a href="@item" target="_blank"><img class="img-responsive" src="@item" alt="Image" /></a>
                        <a class="btn btn-danger" asp-action="DeleteFile" asp-controller="Home" asp-route-fileUrl="@item">Delete</a>
                    </div>
                }
            </div>
        }
        else
        {
            <p>
                No files in the storage container.
            </p>
        }
    </div>
</div>