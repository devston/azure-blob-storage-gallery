@{
    ViewBag.Title = "Gallery";
}

@Html.ActionLink("Upload", "UploadFile", "Home", null, new { @class = "btn btn-primary margin-bottom-15" })

<div class="panel panel-default">
    <div class="panel-body">
        @if (Model != null && Model.Count > 0)
        {
            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
                        <a href="@item" target="_blank"><img class="img-responsive" src="@item" alt="Image" /></a><br />
                        @Html.ActionLink("Delete", "DeleteFile", "Home", new { fileUrl = @item }, new { @class = "btn btn-danger" })
                    </div>
                }
            </div>
        }
        else
        {
            <p>
                No files in the storage container.
            </p>
        }
    </div>
</div>